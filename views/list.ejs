<%- include("header") -%>

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="images/done_logo.jpeg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Project Done!
            </a>
        </div>
    </nav>

    <div class="main-flexbox">

        <div class="left-arrow">
            <form id="previous-form" action="/previous" method="post">
                <button class="btn-left" name="listName" type="submit" value="<%=listTitle%>">
                    <i class="fa-solid fa-angles-left"></i>
                </button>
            </form>
            
            
        </div>

        <div class="list-container">

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary btn-list-del" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fa-solid fa-x"></i>
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    ...
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                </div>
            </div>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary btn-list-new" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fa-solid fa-plus"></i>
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    ...
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                </div>
            </div>

            <div class="box" id="list-title">
                <h1><%= listTitle %></h1>
                <p class="list-date">Created on 12/09/2023</p>
                <p class="item-counter">0/3</p>
            </div>

            <div class="box">
                
                <% newListItems.forEach(function(item) { %>
                    
                    
                    
                    <div class="list-item">
                        <form id="update-form" action="/update" method="post">
                            <input name="checkbox" type="checkbox" value="<%=item._id%>" <%= item.done ? "checked" : "" %> onChange="this.form.submit()">
                            <input type="hidden" name="listName" value="<%=listTitle%>"></input>
                    
                        </form>

                        <p>
                            <%= item.name %>
                        </p>

                        <form id="delete-form" action="/delete" method="post">
                            <button class="btn-delete" name="itemToDelete" type="submit" value="<%=item._id%>" >
                                <i class="fa-solid fa-trash"></i>
                                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
                            </button>
                        </form>
                    </div> 
                
                <% }); %>

                    <form class="list-item" action="/" method="post">
                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                        <button class="btn-new" type="submit" name="list" value="<%=listTitle%>">
                            <i class="fa-solid fa-plus" style="color: white;"></i>
                        </button>
                    </form>

            </div>
        </div>


        <div class="right-arrow">
            <form id="next-form" action="/next" method="post">
                <button class="btn-right" name="listName" type="submit" value="<%=listTitle%>">
                    <i class="fa-solid fa-angles-right"></i>
                    <!-- <input type="hidden" name="listName" value="<%=listTitle%>"></input> -->
                </button>
            </form>
        </div>


    </div>



    <%- include("footer") -%>